@model IEnumerable<WebApplication2.Models.CaseWorkflow>

@{
    ViewData["Title"] = "Workflow Management";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-0 text-gray-800">Workflow Management</h1>
            <p class="mb-4">Review and approve pending case requests</p>
        </div>
    </div>

    <!-- Statistics -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Pending Approvals</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count()</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Workflows -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Pending Workflows</h6>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                            <h5 class="text-success">No pending workflows</h5>
                            <p class="text-muted">All case requests have been processed.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered" id="workflowTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Case Number</th>
                                        <th>Organization</th>
                                        <th>Legislation</th>
                                        <th>Workflow Type</th>
                                        <th>Requested By</th>
                                        <th>Requested Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var workflow in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@workflow.Case?.CaseNumber</strong>
                                            </td>
                                            <td>@workflow.Case?.Organization?.Name</td>
                                            <td>@workflow.Case?.Legislation?.Name</td>
                                            <td>
                                                <span class="badge badge-info">@workflow.WorkflowType</span>
                                            </td>
                                            <td>@workflow.RequestedBy?.UserName</td>
                                            <td>@workflow.RequestedAt.ToString("MMM dd, yyyy HH:mm")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <button type="button" class="btn btn-success btn-sm" 
                                                            onclick="showApproveModal(@workflow.CaseId, '@workflow.Case?.CaseNumber')">
                                                        <i class="fas fa-check"></i> Approve
                                                    </button>
                                                    <button type="button" class="btn btn-danger btn-sm" 
                                                            onclick="showRejectModal(@workflow.CaseId, '@workflow.Case?.CaseNumber')">
                                                        <i class="fas fa-times"></i> Reject
                                                    </button>
                                                    <a href="@Url.Action("Details", "Cases", new { id = workflow.CaseId })" 
                                                       class="btn btn-info btn-sm" target="_blank">
                                                        <i class="fas fa-eye"></i> View
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Approve Modal -->
<div class="modal fade" id="approveModal" tabindex="-1" aria-labelledby="approveModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="approveModalLabel">Approve Case</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="approveForm" method="post">
                <div class="modal-body">
                    <p>Are you sure you want to approve case <strong id="approveCaseNumber"></strong>?</p>
                    <div class="form-group">
                        <label for="approveComments" class="form-label">Comments (Optional)</label>
                        <textarea id="approveComments" name="comments" class="form-control" rows="3" 
                                  placeholder="Enter any additional comments..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check"></i> Approve Case
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="rejectModalLabel">Reject Case</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="rejectForm" method="post">
                <div class="modal-body">
                    <p>Are you sure you want to reject case <strong id="rejectCaseNumber"></strong>?</p>
                    <div class="form-group">
                        <label for="rejectComments" class="form-label">Rejection Reason <span class="text-danger">*</span></label>
                        <textarea id="rejectComments" name="comments" class="form-control" rows="3" 
                                  placeholder="Please provide a reason for rejection..." required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-times"></i> Reject Case
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#workflowTable').DataTable({
                "order": [[5, "asc"]], // Sort by requested date ascending
                "pageLength": 25,
                "language": {
                    "search": "Search workflows:",
                    "lengthMenu": "Show _MENU_ workflows per page",
                    "info": "Showing _START_ to _END_ of _TOTAL_ workflows"
                }
            });
        });

        function showApproveModal(caseId, caseNumber) {
            $('#approveCaseNumber').text(caseId);
            $('#approveForm').attr('action', '@Url.Action("Approve", "Cases")/' + caseId);
            $('#approveModal').modal('show');
        }

        function showRejectModal(caseId, caseNumber) {
            $('#rejectCaseNumber').text(caseNumber);
            $('#rejectForm').attr('action', '@Url.Action("Reject", "Cases")/' + caseId);
            $('#rejectModal').modal('show');
        }

        // Handle form submissions
        $('#approveForm').on('submit', function(e) {
            var comments = $('#approveComments').val();
            var form = $(this);
            var action = form.attr('action');
            
            // Create a hidden input for comments if not already present
            if (!form.find('input[name="comments"]').length) {
                form.append('<input type="hidden" name="comments" value="' + comments + '">');
            }
            
            // Submit the form
            return true;
        });

        $('#rejectForm').on('submit', function(e) {
            var comments = $('#rejectComments').val();
            var form = $(this);
            var action = form.attr('action');
            
            // Create a hidden input for comments if not already present
            if (!form.find('input[name="comments"]').length) {
                form.append('<input type="hidden" name="comments" value="' + comments + '">');
            }
            
            // Submit the form
            return true;
        });
    </script>
}
