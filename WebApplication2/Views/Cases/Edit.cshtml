@model WebApplication2.ViewModels.CaseViewModel

@{
    ViewData["Title"] = "Edit Case";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-0 text-gray-800">Edit Case</h1>
            <p class="mb-4">Modify case information for <strong>@Model.CaseNumber</strong></p>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Case Information</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <!-- Basic Information -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="text-primary mb-3">Basic Information</h5>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="CaseNumber" class="control-label"></label>
                                    <input asp-for="CaseNumber" class="form-control" readonly />
                                    <small class="form-text text-muted">Case number cannot be modified</small>
                                    <span asp-validation-for="CaseNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="OrganizationId" class="control-label"></label>
                                    <select asp-for="OrganizationId" class="form-select" asp-items="@(new SelectList(Model.Organizations, "Id", "Name"))">
                                        <option value="">-- Select Organization --</option>
                                    </select>
                                    <span asp-validation-for="OrganizationId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="LegislationId" class="control-label"></label>
                                    <select asp-for="LegislationId" class="form-select" asp-items="@(new SelectList(Model.Legislations, "Id", "Name"))">
                                        <option value="">-- Select Legislation --</option>
                                    </select>
                                    <span asp-validation-for="LegislationId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ComplianceControlId" class="control-label"></label>
                                    <select asp-for="ComplianceControlId" class="form-select" asp-items="@(new SelectList(Model.ComplianceControls, "Id", "Title"))">
                                        <option value="">-- Select Compliance Control (Optional) --</option>
                                    </select>
                                    <span asp-validation-for="ComplianceControlId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Compliance Details -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="text-primary mb-3">Compliance Details</h5>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ArticleNumber" class="control-label"></label>
                                    <input asp-for="ArticleNumber" class="form-control" placeholder="Enter article number" />
                                    <span asp-validation-for="ArticleNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ComplianceClause" class="control-label"></label>
                                    <textarea asp-for="ComplianceClause" class="form-control" rows="3" placeholder="Enter compliance clause (A/E)"></textarea>
                                    <span asp-validation-for="ComplianceClause" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="NonComplianceStatus" class="control-label"></label>
                                    <textarea asp-for="NonComplianceStatus" class="form-control" rows="3" placeholder="Enter non-compliance status (A/E)"></textarea>
                                    <span asp-validation-for="NonComplianceStatus" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Channels" class="control-label"></label>
                                    <input asp-for="Channels" class="form-control" placeholder="Enter reporting channels" />
                                    <span asp-validation-for="Channels" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="form-check">
                                        <input asp-for="IsRelatedToJoi" class="form-check-input" />
                                        <label asp-for="IsRelatedToJoi" class="form-check-label"></label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Source" class="control-label"></label>
                                    <select asp-for="Source" class="form-select">
                                        <option value="">-- Select Source --</option>
                                        <option value="Authority Matrix">Authority Matrix</option>
                                        <option value="Inspection">Inspection</option>
                                        <option value="Self Assessment">Self Assessment</option>
                                        <option value="External Audit">External Audit</option>
                                        <option value="Complaint">Complaint</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <span asp-validation-for="Source" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Organizational Details -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="text-primary mb-3">Organizational Details</h5>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="OwningUnitSector" class="control-label"></label>
                                    <input asp-for="OwningUnitSector" class="form-control" placeholder="Enter owning unit/sector" />
                                    <span asp-validation-for="OwningUnitSector" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="MonitoringTeam" class="control-label"></label>
                                    <select asp-for="MonitoringTeam" class="form-select">
                                        <option value="">-- Select Monitoring Team --</option>
                                        <option value="Operation">Operation</option>
                                        <option value="Assurance">Assurance</option>
                                        <option value="Planning">Planning</option>
                                        <option value="Compliance">Compliance</option>
                                        <option value="Risk Management">Risk Management</option>
                                    </select>
                                    <span asp-validation-for="MonitoringTeam" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="DateOfSectorNotification" class="control-label"></label>
                                    <input asp-for="DateOfSectorNotification" class="form-control" type="date" />
                                    <span asp-validation-for="DateOfSectorNotification" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Priority" class="control-label"></label>
                                    <select asp-for="Priority" class="form-select">
                                        <option value="Low">Low</option>
                                        <option value="Medium">Medium</option>
                                        <option value="High">High</option>
                                        <option value="Critical">Critical</option>
                                    </select>
                                    <span asp-validation-for="Priority" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ExpectedFine" class="control-label"></label>
                                    <input asp-for="ExpectedFine" class="form-control" type="number" step="0.01" min="0" placeholder="Enter expected fine amount" />
                                    <span asp-validation-for="ExpectedFine" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="AssignedToId" class="control-label"></label>
                                    <select asp-for="AssignedToId" class="form-select" asp-items="@(new SelectList(Model.Users, "Id", "UserName"))">
                                        <option value="">-- Select Assignee (Optional) --</option>
                                    </select>
                                    <span asp-validation-for="AssignedToId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Submit Buttons -->
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save"></i> Update Case
                                    </button>
                                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                                        <i class="fas fa-eye"></i> View Details
                                    </a>
                                    <a asp-action="Index" class="btn btn-secondary">
                                        <i class="fas fa-arrow-left"></i> Back to List
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Dynamic loading of compliance controls based on selected legislation
            $('#LegislationId').change(function() {
                var legislationId = $(this).val();
                var complianceControlSelect = $('#ComplianceControlId');
                
                complianceControlSelect.empty();
                complianceControlSelect.append('<option value="">-- Select Compliance Control (Optional) --</option>');
                
                if (legislationId) {
                    // In a real application, you would make an AJAX call here
                    // to get compliance controls for the selected legislation
                    console.log('Selected legislation ID:', legislationId);
                }
            });
        });
    </script>
}
