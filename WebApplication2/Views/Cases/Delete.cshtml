@model WebApplication2.Models.Case

@{
    ViewData["Title"] = "Delete Case";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-0 text-gray-800">Delete Case</h1>
            <p class="mb-4">Confirm deletion of case <strong>@Model.CaseNumber</strong></p>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow border-danger">
                <div class="card-header py-3 bg-danger text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-exclamation-triangle"></i> Delete Confirmation Required
                    </h6>
                </div>
                <div class="card-body">
                    <!-- Warning Alert -->
                    <div class="alert alert-danger">
                        <h6 class="alert-heading">
                            <i class="fas fa-exclamation-triangle"></i> Warning: This action cannot be undone!
                        </h6>
                        <p class="mb-0">
                            You are about to delete case <strong>@Model.CaseNumber</strong>. This will permanently remove the case from the system.
                            All associated data including updates, remedial plans, attachments, and workflow history will also be deleted.
                        </p>
                    </div>

                    <!-- Case Summary -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="text-primary mb-3">Case Summary</h5>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">Case Number:</dt>
                                <dd class="col-sm-7">@Model.CaseNumber</dd>
                                
                                <dt class="col-sm-5">Organization:</dt>
                                <dd class="col-sm-7">@Model.Organization?.Name</dd>
                                
                                <dt class="col-sm-5">Legislation:</dt>
                                <dd class="col-sm-7">@Model.Legislation?.Name</dd>
                                
                                <dt class="col-sm-5">Status:</dt>
                                <dd class="col-sm-7">
                                    <span class="badge badge-@(Model.Status switch {
                                        "Open" => "warning",
                                        "Under Review" => "info",
                                        "Approved" => "success",
                                        "Rejected" => "danger",
                                        "Closed" => "secondary",
                                        _ => "light"
                                    })">@Model.Status</span>
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">Priority:</dt>
                                <dd class="col-sm-7">
                                    <span class="badge badge-@(Model.Priority switch {
                                        "Low" => "success",
                                        "Medium" => "warning",
                                        "High" => "danger",
                                        "Critical" => "dark",
                                        _ => "light"
                                    })">@Model.Priority</span>
                                </dd>
                                
                                <dt class="col-sm-5">Created Date:</dt>
                                <dd class="col-sm-7">@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</dd>
                                
                                <dt class="col-sm-5">Created By:</dt>
                                <dd class="col-sm-7">@Model.CreatedBy?.UserName</dd>
                                
                                <dt class="col-sm-5">Article Number:</dt>
                                <dd class="col-sm-7">@Model.ArticleNumber</dd>
                            </dl>
                        </div>
                    </div>

                    <!-- Impact Assessment -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="text-warning mb-3">Impact Assessment</h5>
                            <div class="alert alert-warning">
                                <h6 class="alert-heading">Data that will be permanently deleted:</h6>
                                <ul class="mb-0">
                                    <li><strong>Case Information:</strong> All case details and metadata</li>
                                    <li><strong>Case Updates:</strong> @Model.Updates.Count update records</li>
                                    <li><strong>Remedial Plans:</strong> @Model.RemedialPlans.Count remedial plan records</li>
                                    <li><strong>Attachments:</strong> @Model.Attachments.Count attached files</li>
                                    <li><strong>Workflow History:</strong> @Model.Workflows.Count workflow records</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- Confirmation Form -->
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="confirmationText" class="form-label">
                                        Type <strong>DELETE</strong> to confirm
                                    </label>
                                    <input type="text" id="confirmationText" name="confirmationText" class="form-control" 
                                           placeholder="Type DELETE to confirm deletion" required />
                                    <small class="form-text text-muted">This is a safety measure to prevent accidental deletions</small>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <button type="submit" class="btn btn-danger" id="deleteBtn" disabled>
                                        <i class="fas fa-trash"></i> Permanently Delete Case
                                    </button>
                                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                                        <i class="fas fa-eye"></i> View Details
                                    </a>
                                    <a asp-action="Index" class="btn btn-secondary">
                                        <i class="fas fa-arrow-left"></i> Back to List
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Enable delete button only when "DELETE" is typed
            $('#confirmationText').on('input', function() {
                var confirmationText = $(this).val().trim();
                var deleteBtn = $('#deleteBtn');
                
                if (confirmationText === 'DELETE') {
                    deleteBtn.prop('disabled', false);
                    deleteBtn.removeClass('btn-secondary').addClass('btn-danger');
                } else {
                    deleteBtn.prop('disabled', true);
                    deleteBtn.removeClass('btn-danger').addClass('btn-secondary');
                }
            });
            
            // Additional confirmation before form submission
            $('form').on('submit', function(e) {
                var confirmationText = $('#confirmationText').val().trim();
                
                if (confirmationText !== 'DELETE') {
                    e.preventDefault();
                    alert('Please type DELETE to confirm deletion.');
                    return false;
                }
                
                return confirm('Are you absolutely sure you want to permanently delete this case? This action cannot be undone and all associated data will be lost.');
            });
        });
    </script>
}
